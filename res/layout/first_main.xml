<?xml version="1.0" encoding="utf-8" ?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" 
android:layout_width="match_parent" 
android:layout_height="match_parent" 
android:background="@drawable/wifi_background"
android:orientation="vertical">
  <EditText 
      android:id="@+id/number" 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:layout_alignParentRight="true" 
      android:hint="请输入网格位置..." /> 

  <Button 
      android:id="@+id/button1" 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:text="确认位置信息" 
      android:textColor="#FFFFFF" 
      android:layout_below="@id/number" /> 
      
  <Button 
      android:id="@+id/scan" 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:layout_below="@id/button1" 
      android:text="浏览WIFI信息" 
      android:textColor="#FFFFFF" /> 
  <Button 
      android:id="@+id/sure" 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:layout_below="@id/scan" 
      android:text="确认WIFI信息" 
      android:textColor="#FFFFFF" /> 
  <Button 
      android:id="@+id/read" 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:text="测试位置信息" 
      android:textColor="#FFFFFF" 
      android:layout_below="@id/sure" /> 
  <Button 
      android:id="@+id/start" 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:text="打开WIFI" 
      android:textColor="#FFFFFF" 
      android:layout_below="@id/read" /> 
  <Button 
      android:id="@+id/check" 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:text="删除WIFI信息" 
      android:textColor="#FFFFFF" 
      android:layout_below="@id/start" /> 
<ScrollView 
    android:id="@+id/scrollView1" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:layout_below="@+id/check">

  <TextView 
      android:id="@+id/allNetWork" 
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:layout_below="@id/check" 
      android:text="当前没有扫描到Wifi网络" 
      android:textColor="#000000" /> 
  </ScrollView>
  </RelativeLayout>